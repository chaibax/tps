.container
  .one-column-centered
    = form_for @administrateur, url: { controller: 'administrateurs/activate', action: :create }, html: { class: "form" } do |f|
      %br
      %h1
        Choix du mot de passe

      = f.label :email, "Email"
      = f.text_field :email, disabled: true

      = f.label :password do
        Mot de passe

      = f.password_field :password, placeholder: 'Mot de passe', onKeyUp: "javascript:DS.checkPasswordStrength(event, 'strength-bar', 'submit-password');", placeholder: "Commencez à saisir votre mot de passe"

      #strength-bar.password-strength
        &nbsp;

      .explication
        %strong Aide :
        Pour que votre mot de passe soit valide il doit atteindre 100 % de complexité.
        %br
        Une courte phrase peut être un mot de passe très sécurisé.

      = f.hidden_field :reset_password_token, value: params[:token]
      = f.submit 'Continuer', class: 'button large primary expand', id: "submit-password", data: { disable_with: "Envoi..." }
